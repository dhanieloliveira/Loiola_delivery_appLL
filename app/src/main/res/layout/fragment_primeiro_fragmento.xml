<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PrimeiroFragmento"
    android:background="@drawable/fundo_amadeirado">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SOBRE NÓS"
        android:textColor="@color/black"
        android:textAllCaps="true"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:gravity="center"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_marginHorizontal="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="50dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A Loiola é uma das pizzarias mais conhecidas do bairro Loiola(São Paulo) e centro de São Paulo. Com produtos de altíssima qualidade e um delivery eficiente a Pizzaria Loiola vem conquistando o paladar de uma grande clientela. Peça a sua JÁ!!!"
                    android:textSize="25dp"
                    android:textColor="@color/black" />







                        </LinearLayout>


        </androidx.cardview.widget.CardView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/pizzalogo"/>

    </LinearLayout>
</FrameLayout>